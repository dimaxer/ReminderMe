<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B784D"
    android:clickable="?android:attr/windowSwipeToDismiss">
    android:id="@+id/contact_data"


    <Button
        android:id="@+id/saveBtn"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="346dp"
        android:layout_height="122dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-9dp"
        android:background="#5B784D"
        android:stateListAnimator="@anim/fragment_fade_exit"
        android:text="@string/save"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="120dp"
        android:background="#C8DFA1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name :"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:text="NameString"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal"
            android:textSize="25sp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="169dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Tel :"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Tel"
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:text="TelString"
                android:textSize="25sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="259dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="116dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_date"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/in_date"
                android:layout_toEndOf="@+id/in_date"
                android:layout_toRightOf="@+id/in_date"
                android:text="SELECT DATE" />

            <EditText
                android:id="@+id/in_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_time"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_date"
                android:layout_alignStart="@+id/btn_date"
                android:layout_alignLeft="@+id/btn_date"
                android:text="SELECT TIME" />

            <EditText
                android:id="@+id/in_time"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/in_date"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/contact_information"
        android:textSize="32dp" />

</RelativeLayout>




